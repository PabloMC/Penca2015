<?xml version='1.0' encoding='utf-8'?>
<widget id="uy.edu.ort.penca2015" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Penca2015</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="10000" />

    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="www/icon.png" />
        <!-- you can use any density that exists in the Android project -->
        <splash src="platforms/android/res/drawable-land-hdpi/screen.png" density="land-hdpi"/>
        <splash src="platforms/android/res/drawable-land-ldpi/screen.png" density="land-ldpi"/>
        <splash src="platforms/android/res/drawable-land-mdpi/screen.png" density="land-mdpi"/>
        <splash src="platforms/android/res/drawable-land-xdpi/screen.png" density="land-xhdpi"/>

        <splash src="platforms/android/res/drawable-port-hdpi/screen.png" density="port-hdpi"/>
        <splash src="platforms/android/res/drawable-port-ldpi/screen.png" density="port-ldpi"/>
        <splash src="platforms/android/res/drawable-port-mdpi/screen.png" density="port-mdpi"/>
        <splash src="platforms/android/res/drawable-port-xdpi/screen.png" density="port-xhdpi"/>

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
